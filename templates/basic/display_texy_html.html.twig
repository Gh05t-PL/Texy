		{% if  date() >= date(texy.expirationDate) %}
			<pre>Expired</pre>
		{% else %}
			<pre>{{ texy.content }}</pre>
		{% endif %}

		<script>
            function escapeHtml(unsafe) {
                return unsafe
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/"/g, "&quot;")
                    .replace(/'/g, "&#039;");
            }

            jQuery.ajax({
